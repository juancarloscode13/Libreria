<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.example.modelo">

    <class name="Administrador" table="administrador">

        <id name="id" column="id" type="int">
            <generator class="identity"/>
        </id>

        <property name="nombre" column="nombre" type="string" not-null="true"/>
        <property name="contraseña" column="contraseña" type="string" not-null="true"/>
        <property name="permisosAdmin" column="permisos_admin" type="boolean" not-null="true"/>

        <bag name="libros" inverse="true" cascade="all">
            <key column="id_vendedor"/>
            <one-to-many class="Libro"/>
        </bag>

    </class>

</hibernate-mapping>
